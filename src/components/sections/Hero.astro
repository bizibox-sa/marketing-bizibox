---
import Section from "../Section.astro";
import Form, { type HeroFormContent } from "../ui/Form.astro";
import { Image } from "astro:assets";
import sesLogo from "../../assets/logos/ses-full.png";
import prefaluxLogo from "../../assets/logos/prefalux.png";
import socomLogo from "../../assets/logos/socom.png";
import cteamLogo from "../../assets/logos/cteam.png";
import unicreditLogo from "../../assets/logos/unicredit.png";

// Hero content interface
export interface HeroContent {
  tagline?: string;
  headline?: string;
  intro?: string;
  form: HeroFormContent;
  clients: {
    taglineNumber: string;
    taglinePlus: string;
    taglineLabel: string;
  };
}

// Props interface for Hero component
export interface Props {
  content: HeroContent;
}

// Destructure content prop
const { content } = Astro.props;
---

<Section
  as="section"
  class="relative overflow-hidden bg-transparent"
  id="hero"
  containerClass="py-12 sm:py-16"
>
  <!-- Decorative circles background -->
  <div class="pointer-events-none absolute inset-0" aria-hidden="true">
    <!-- Large circle - top left -->
    <div
      class="absolute -top-32 -left-32 h-96 w-96 rounded-full border border-teal-700/20 bg-teal-800/5"
    >
    </div>
    <!-- Medium circle - bottom left -->
    <div
      class="absolute bottom-32 left-32 hidden h-48 w-48 rounded-full border border-teal-700/20 bg-teal-800/5 sm:block"
    >
    </div>
    <!-- Medium circle - bottom right -->
    <div
      class="absolute -right-24 -bottom-24 h-84 w-84 rounded-full border border-teal-700/20 bg-teal-800/5"
    >
    </div>
    <!-- Small circle - center top -->
    <div
      class="absolute top-1/4 right-1/3 hidden h-72 w-72 rounded-full border border-teal-700/20 bg-teal-800/5 sm:block"
    >
    </div>
  </div>

  <!-- Content (relative to appear above circles) -->
  <div class="relative z-10">
    <!-- Grid -->
    <div class="grid items-center gap-16 lg:grid-cols-2 lg:gap-12">
      <!-- Headline -->
      <div class="mx-auto max-w-2xl text-center lg:mb-16 lg:text-left">
        <!-- Tagline -->
        <p
          class="mb-4 inline-block bg-linear-to-r from-cyan-600 to-teal-500 bg-clip-text font-medium text-transparent"
        >
          {content.tagline}
        </p>
        <!-- End Tagline -->
        <h1
          slot="heading"
          class="mb-6 bg-linear-to-tl from-gray-200 via-zinc-300 to-gray-200 bg-clip-text text-4xl leading-11 font-semibold text-transparent sm:text-6xl sm:leading-16"
        >
          {content.headline}
        </h1>
        <p class="text-lg text-gray-400">
          {content.intro}
        </p>
      </div>
      <!-- End Headline -->

      <div>
        <!-- Form -->
        <Form content={content.form} />
        <!-- End Form -->
      </div>
      <!-- End Col -->
    </div>
    <!-- End Grid -->

    <!-- Clients Section -->
    <div
      class="mt-6 mb-4 flex flex-wrap items-center justify-center gap-x-2 gap-y-1.5 py-3 text-sm text-gray-300 after:ms-6 after:flex-1 sm:justify-start sm:after:border-t sm:after:border-gray-50/30 md:mt-12"
    >
      <span class="inline-flex items-center whitespace-nowrap"
        ><span
          class="bg-linear-to-r from-cyan-600 to-teal-500 bg-clip-text font-semibold text-transparent"
          >{content.clients.taglineNumber}</span
        ><span
          class="bg-linear-to-r from-cyan-600 to-teal-500 bg-clip-text font-semibold text-transparent"
          >{content.clients.taglinePlus}</span
        ></span
      >
      <span class="whitespace-nowrap">{content.clients.taglineLabel}</span>
    </div>

    <!-- Clients -->
    <div class="flex flex-wrap justify-center gap-x-6 gap-y-2 lg:justify-start lg:gap-x-12">
      <Image
        src={socomLogo}
        alt="Socom"
        class="h-auto w-[200px] opacity-60 grayscale"
        loading="lazy"
        decoding="async"
        fetchpriority="auto"
      />
      <Image
        src={prefaluxLogo}
        alt="Prefalux"
        class="h-auto w-[200px] opacity-60 grayscale"
        loading="lazy"
        decoding="async"
        fetchpriority="auto"
      />
      <Image
        src={sesLogo}
        alt="SES"
        class="h-auto w-[200px] opacity-60 grayscale"
        loading="lazy"
        decoding="async"
        fetchpriority="auto"
      />
      <Image
        src={cteamLogo}
        alt="C-Team"
        class="h-auto w-[200px] opacity-60 grayscale"
        loading="lazy"
        decoding="async"
        fetchpriority="auto"
      />
      <Image
        src={unicreditLogo}
        alt="Unicredit"
        class="h-auto w-[200px] opacity-60 grayscale"
        loading="lazy"
        decoding="async"
        fetchpriority="auto"
      />
    </div>
    <!-- End Clients -->
  </div>
  <!-- End Content wrapper -->
</Section>
