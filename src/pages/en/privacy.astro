---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { homePageEn } from "../../content/home.en";

const content = homePageEn.privacy;
---

<BaseLayout
  title="Privacy Policy - Bizibox"
  description="Privacy policy of Bizibox"
  robots="noindex,follow"
>
  <Header />
  <main class="mx-auto max-w-4xl px-4 py-16 sm:px-6 lg:px-8">
    <h1 class="mb-8 text-4xl font-bold text-white sm:text-5xl">{content.title}</h1>
    <p class="mb-12 text-lg leading-relaxed text-gray-300">{content.intro}</p>
    <div class="space-y-10">
      {
        content.sections.map((section) => (
          <section class="space-y-4">
            <h2 class="text-2xl font-semibold text-teal-400">{section.heading}</h2>
            <div class="space-y-2">
              {section.content.map((paragraph) => (
                <p class="leading-relaxed text-gray-300">{paragraph}</p>
              ))}
            </div>
          </section>
        ))
      }
    </div>
  </main>
  <Footer content={homePageEn.footer} />
</BaseLayout>
