---
import "../styles/global.css";
import { homePageEn } from "../content/home.en";
import { ClientRouter } from "astro:transitions";
import Cta from "../components/ui/Cta.astro";

// 404 page is English-only (universal error page)
const content = homePageEn.notFound;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Charset must be first for proper encoding detection -->
    <meta charset="utf-8" />

    <ClientRouter />

    <meta name="astro-view-transitions-enabled" content="true" />
    <meta name="astro-view-transitions-fallback" content="animate" />

    <!-- Technical meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="noindex,follow" />
    <meta name="color-scheme" content="light dark" />

    <!-- Basic SEO -->
    <title>{content.title} - Bizibox</title>
    <meta name="description" content={content.description} />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://marketing.bizibox.eu/404" />

    <!-- Favicons & PWA manifest -->
    <link rel="icon" href="/assets/favicon/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/assets/favicon/favicon.svg" />
    <link rel="apple-touch-icon" href="/assets/favicon/apple-touch-icon.png" />
    <link rel="manifest" href="/assets/favicon/site.webmanifest" />

    <!-- Sitemap for search engines -->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${content.title} - Bizibox`} />
    <meta property="og:description" content={content.description} />
    <meta property="og:site_name" content="Bizibox" />
    <meta property="og:url" content="https://marketing.bizibox.eu/404/" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:image" content="https://marketing.bizibox.eu/assets/og/bizibox-og-en.jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:alt" content={`${content.title} - Bizibox`} />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${content.title} - Bizibox`} />
    <meta name="twitter:description" content={content.description} />
    <meta name="twitter:image" content="https://marketing.bizibox.eu/assets/og/bizibox-og-en.jpg" />
  </head>

  <body
    class="bg-teal-1000 relative min-h-dvh bg-linear-to-bl from-teal-950 via-transparent text-gray-300 antialiased"
  >
    <!-- Main 404 Content -->
    <main class="relative flex min-h-dvh items-center justify-center px-4 sm:px-6 lg:px-8">
      <!-- Decorative background -->
      <div class="pointer-events-none absolute inset-0" aria-hidden="true">
        <div
          class="absolute top-1/2 left-1/2 h-72 w-72 -translate-x-1/2 -translate-y-1/2 rounded-full border border-teal-700/20 bg-teal-800/5 sm:h-96 sm:w-96"
        >
        </div>
      </div>

      <!-- Content -->
      <div class="relative z-10 mx-auto max-w-2xl text-center">
        <!-- 404 Number -->
        <div
          class="mb-8 bg-linear-to-r from-cyan-600 to-teal-500 bg-clip-text text-9xl font-bold text-transparent"
          aria-hidden="true"
        >
          404
        </div>

        <!-- Heading -->
        <h1 class="mb-6 text-4xl font-bold text-white sm:text-5xl">
          {content.heading}
        </h1>

        <!-- Description -->
        <p class="mb-8 text-lg leading-relaxed text-gray-300">
          {content.message}
        </p>

        <!-- CTA Button -->
        <Cta href="/" variant="primary" size="lg" class="min-w-3xs rounded-full">
          {content.ctaText}
          <svg
            slot="icon-right"
            xmlns="http://www.w3.org/2000/svg"
            width="1em"
            height="1em"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.75"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="size-6 text-white"
            aria-hidden="true"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M9 11l-4 4l4 4m-4 -4h11a4 4 0 0 0 0 -8h-1"></path></svg
          >
        </Cta>
      </div>
    </main>
  </body>
</html>
