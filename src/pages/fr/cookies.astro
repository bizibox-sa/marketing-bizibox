---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { homePageFr } from "../../content/home.fr";

const content = homePageFr.cookies;
const description =
  "Politique de gestion des cookies de Bizibox SA. Informations sur les cookies utilisés, leur finalité et vos choix de consentement.";
---

<BaseLayout title={`${content.title} | Bizibox`} description={description} robots="noindex,follow">
  <Header />
  <main class="mx-auto max-w-4xl px-4 py-16 sm:px-6 lg:px-8">
    <h1 class="mb-12 text-4xl font-bold text-white sm:text-5xl">
      {content.title}
    </h1>
    <div class="space-y-10">
      {
        content.sections.map((section) => (
          <section class="space-y-4">
            <h2 class="text-2xl font-semibold text-teal-400">{section.heading}</h2>
            <div class="space-y-2">
              {section.content.map((paragraph) => (
                <p class="leading-relaxed text-gray-300">{paragraph}</p>
              ))}
            </div>
          </section>
        ))
      }
    </div>
  </main>
  <Footer content={homePageFr.footer} />
</BaseLayout>
